package routines;

import org.apache.commons.lang3.math.NumberUtils;
import java.util.concurrent.ThreadLocalRandom;

public class MaskingMethods {   
	
	public static String returnRandomString(String params) {
		String ran = DataMasking.createRandomString(12);
        return ran;
    }
	
	public static int returnRandomInt(String params) {
		System.out.println(params);
		String[] args = params.split("\\;");		
		
		int length = NumberUtils.toInt(args[2], 0);  	
		
		 if(length>10) {
			return ThreadLocalRandom.current().nextInt(0, length + 1);
		}else {
			return -1;
		}
    }
	
}
